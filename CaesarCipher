function rot13(str) { // LBH QVQ VG!
let rts = str.split("")
var ourArray = [rts];
var i = 0;
while(i < ourArray.length) {
  //I want to print each letter of the array, perhaps .splice
  let ourCurrentCharacter = ourArray[i];
  console.log(ourCurrentCharacter);
  // if ourCurrentCharacter == a letter (regex?)
  // ourCurrentCharacter.charCodeAt(); //to convert the English character to ASCII.
  //ourCurrentCharacter = the value of the Char Code ++13
  // ourCurrentCharacter.fromCharCode(); //to convert ASCII to English character.
  i++;//iterate array in while loop
}
  let joinedArray = ourArray.join("");
  console.log(joinedArray);
  return joinedArray;
}
// Change the inputs below to test
rot13("SERR PBQR PNZC"); //should decode to FREE CODE CAMP
rot13("SERR CVMMN!"); // should decode to FREE PIZZA!
rot13("SERR YBIR?"); // should decode to FREE LOVE?
rot13("GUR DHVPX OEBJA SBK WHZCF BIRE GUR YNML QBT."); // should decode to THE QUICK BROWN FOX JUMPS OVER THE LAZY DOG.
